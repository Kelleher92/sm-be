{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./index.ts"
  },
  "include": [
    "index.ts",
    "server/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
